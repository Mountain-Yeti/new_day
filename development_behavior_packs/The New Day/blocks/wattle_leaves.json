						}
					},
					"minecraft:unit_cube": {},
					"tag:wiki:decay_tier_3": {}
				}
			},
			{
				"condition": "query.block_property('new_day:decay_tier') == 4",
				"components": {
					"minecraft:ticking": {
						"looping": true,
						"range": [0, 0],
						"on_tick": {
							"event": "check"
						}
					},

				"wiki:decay_tier": [5, 4, 3, 2, 1, 0], 
				"wiki:not_decay": [false, true],
				"wiki:solid": [false, true]
			}
		},
		"events": {
			"wiki:on_destroyed": {
				
				"sequence": [
					{
						"condition": "query.get_equipped_item_name == 'shears'",
						"spawn_loot": {
							"table": "loot_tables/blocks/wattle_leaves_block.json"
						}
					},
					{
						"condition": "query.get_equipped_item_name != 'shears'",
						"spawn_loot": {
							"table": "loot_tables/blocks/wattle_leaves_loot.json"
						}
					}
				]
			},
			"check": {
				
				"sequence": [
					{
						"condition": "q.block_property('new_day:not_decay') == false",
						"set_block_property": {
							"wiki:decay_tier": "(q.block_neighbor_has_any_tag(0,0,-1,'wiki:wattle_log') || q.block_neighbor_has_any_tag(0,0,1,'wiki:wattle_log') || q.block_neighbor_has_any_tag(-1,0,0,'wiki:wattle_log') || q.block_neighbor_has_any_tag(1,0,0,'wiki:wattle_log') || q.block_neighbor_has_any_tag(0,-1,0,'wiki:wattle_log') || q.block_neighbor_has_any_tag(0,1,0,'wiki:wattle_log')) ? 4 : ((q.block_neighbor_has_any_tag(0,0,-1,'wiki:decay_tier_4') || q.block_neighbor_has_any_tag(0,0,1,'wiki:decay_tier_4') || q.block_neighbor_has_any_tag(-1,0,0,'wiki:decay_tier_4') || q.block_neighbor_has_any_tag(1,0,0,'wiki:decay_tier_4') || q.block_neighbor_has_any_tag(0,-1,0,'wiki:decay_tier_4') || q.block_neighbor_has_any_tag(0,1,0,'wiki:decay_tier_4')) ? 3 : ( (q.block_neighbor_has_any_tag(0,0,-1,'wiki:decay_tier_3') || q.block_neighbor_has_any_tag(0,0,1,'wiki:decay_tier_3 ') || q.block_neighbor_has_any_tag(-1,0,0,'wiki:decay_tier_3') || q.block_neighbor_has_any_tag(1,0,0,'wiki:decay_tier_3') || q.block_neighbor_has_any_tag(0,-1,0,'wiki:decay_tier_3') || q.block_neighbor_has_any_tag(0,1,0,'wiki:decay_tier_3')) ? 2 : ( (q.block_neighbor_has_any_tag(0,0,-1,'wiki:decay_tier_2') || q.block_neighbor_has_any_tag(0,0,1,'wiki:decay_tier_2') || q.block_neighbor_has_any_tag(-1,0,0,'wiki:decay_tier_2') || q.block_neighbor_has_any_tag(1,0,0,'wiki:decay_tier_2') || q.block_neighbor_has_any_tag(0,-1,0,'wiki:decay_tier_2') || q.block_neighbor_has_any_tag(0,1,0,'wiki:decay_tier_2')) ? 1 : 0 ) ) )"
						}
					},
					{
						"set_block_property": {
							"wiki:solid": "q.block_neighbor_has_any_tag(0,0,-1,'wiki:wattle_log','stone','wiki:wattle_leaves') && q.block_neighbor_has_any_tag(0,0,1,'wiki:wattle_log','stone','wiki:wattle_leaves') && q.block_neighbor_has_any_tag(0,1,0,'wiki:wattle_log','stone','wiki:wattle_leaves') && q.block_neighbor_has_any_tag(0,-1,0,'wiki:wattle_log','stone','wiki:wattle_leaves') && q.block_neighbor_has_any_tag(-1,0,0,'wiki:wattle_log','stone','wiki:wattle_leaves') && q.block_neighbor_has_any_tag(1,0,0,'wiki:wattle_log','stone','wiki:wattle_leaves')"
						}
					}
				]
			},
			"wiki:stop_decay": {
				
				"set_block_property": {
					"wiki:not_decay": true
				}
			},
			"wiki:decay": {
				
				"die": {}
			}
		},
		"permutations": [
			
			{
